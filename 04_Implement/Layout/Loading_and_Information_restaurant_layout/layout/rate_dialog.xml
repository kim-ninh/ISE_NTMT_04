<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!--location-->
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRateLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.5"
            android:textSize="17dp"/>

        <ProgressBar
            android:id="@+id/pgbRateLocation"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="17dp"/>

    </LinearLayout><!--location-->

    <!--price-->
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRatePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.5"
            android:textSize="17dp"/>

        <ProgressBar
            android:id="@+id/pgbRatePrice"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="17dp"/>

    </LinearLayout><!--price-->

    <!--quality-->
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRateQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.5"
            android:textSize="17dp"/>

        <ProgressBar
            android:id="@+id/pgbRateQuality"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quality"
            android:textSize="17dp"/>

    </LinearLayout><!--quality-->

    <!--service-->
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRateService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.5"
            android:textSize="17dp"/>

        <ProgressBar
            android:id="@+id/pgbRateService"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service"
            android:textSize="17dp"/>

    </LinearLayout><!--service-->

    <!--space-->
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRateSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.5"
            android:textSize="17dp"/>

        <ProgressBar
            android:id="@+id/pgbRateSpace"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Space"
            android:textSize="17dp"/>

    </LinearLayout><!--space-->

</LinearLayout>