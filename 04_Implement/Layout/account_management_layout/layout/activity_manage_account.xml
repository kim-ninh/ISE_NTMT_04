<?xml version="1.0" encoding="utf-8"?>
<!-- Main content -->
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#eeeeee">

        <TextView
            android:id="@+id/lblAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HÌNH ĐẠI DIỆN"
            android:textSize="18sp"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/avatar_boss" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblChangeAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:text="Đổi ảnh đại diện"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text=">"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/lblContactAndInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THÔNG TIN VÀ LIÊN HỆ"
            android:textSize="18sp"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border">

            <TextView
                android:id="@+id/lblUserName"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập"
                android:labelFor="@id/txtResName"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/txtUserName"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textShortMessage"
                android:background="@drawable/custom_border"
                android:text="admin_69"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border">

            <TextView
                android:id="@+id/lblRealName"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tên thật"
                android:labelFor="@id/txtAddress"/>

            <EditText
                android:id="@+id/txtRealName"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textShortMessage"
                android:background="@drawable/custom_border"
                android:text="Nguyễn Văn A"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border">

            <TextView
                android:id="@+id/lblPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/txtPhoneNumber"
                android:text="Số điện thoại" />

            <EditText
                android:id="@+id/txtPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:inputType="phone"
                android:background="@drawable/custom_border"
                android:text="0904461762"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border">

            <TextView
                android:id="@+id/lblEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:labelFor="@id/txtPhoneNumber"
                android:text="Email" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:inputType="phone"
                android:background="@drawable/custom_border"
                android:text="admin69@gmail.com"
                android:textSize="14sp" />
        </LinearLayout>
        <Button
            android:id="@+id/buttonChangePass"
            android:text="Đổi mật khẩu"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="#cf2a27"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/lblPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MẬT KHẨU"
            android:textSize="18sp"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border">

            <TextView
                android:id="@+id/lblCurrentPass"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mật khẩu hiện tại"
                android:labelFor="@id/txtCurrentPass"/>

            <EditText
                android:id="@+id/txtCurrentPass"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:background="@drawable/custom_border"
                android:hint="Nhập mật khẩu hiện tại"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border">

            <TextView
                android:id="@+id/lblNewPass"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mật khẩu mới"
                android:labelFor="@id/txtNewPass"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/txtNewPass"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:background="@drawable/custom_border"
                android:hint="Nhập mật khẩu mới"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
