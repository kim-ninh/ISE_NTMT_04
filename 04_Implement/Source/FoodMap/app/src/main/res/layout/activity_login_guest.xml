<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/login_guest_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Đăng nhập" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="134dp"
        android:src="@drawable/icon_foodmap"/>

    <Button
        android:id="@+id/btnFacebookLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_sign_in_fb"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAllCaps="false"
        android:text="Sign in with Facebook"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffff"/>

    <Button
        android:id="@+id/btnOwnerLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#448aff"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAllCaps="false"
        android:text="Tài khoản chủ quán"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffff"
        />
    <Button
        android:id="@+id/btnOwnerRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_sign_in"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAllCaps="false"
        android:text="Đăng ký chủ quán"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffff"
        />

</LinearLayout>