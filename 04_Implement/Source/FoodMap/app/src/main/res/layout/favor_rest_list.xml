<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgBackFavorRest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/icon_foodmap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/imgBackFavorRest"
        android:layout_alignTop="@id/imgBackFavorRest"
        android:layout_alignRight="@id/imgBackFavorRest"
        android:layout_alignBottom="@id/imgBackFavorRest">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="#803a3939">

            <TextView
                android:id="@+id/txtFavorRestName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="restaurant name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingBottom="2dp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>